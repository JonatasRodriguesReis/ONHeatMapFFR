<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"  android:layout_height="100dp" android:paddingTop="10dp"
    android:paddingLeft="5dp" android:paddingRight="5dp"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/itemNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/posicaoRanking"
        android:layout_marginStart="5dp"
        android:text="Item"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/anoAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/anoAtual"
        android:layout_alignBottom="@+id/anoAtual"
        android:text="'17"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valorAnoAterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/anoAnterior"
        android:layout_below="@id/itemNome"
        android:layout_marginTop="5dp"
        android:text="  0,000"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valorAnoAteriorS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iconeCorS"
        android:layout_alignStart="@+id/valorAnoAterior"
        android:text="  0000"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/anoAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/valorAnoAterior"
        android:layout_marginStart="44dp"
        android:layout_toEndOf="@+id/valorAnoAterior"
        android:text="'18"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valorAnoAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/anoAtual"
        android:layout_toEndOf="@+id/anoAtual"
        android:text="  0,0000"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valorAnoAtualS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/valorAnoAteriorS"
        android:layout_alignBottom="@+id/valorAnoAteriorS"
        android:layout_toEndOf="@+id/anoAtual"
        android:text="  00000"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/valorImproved"
        android:layout_toStartOf="@+id/iconeCor"
        android:background="@drawable/iconitems"
        android:padding="0dp"
        app:srcCompat="@drawable/downward" />

    <ImageButton
        android:id="@+id/imgIconS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imgIcon"
        android:layout_toStartOf="@+id/iconeCorS"
        android:background="@drawable/iconitems"
        android:padding="0dp"
        app:srcCompat="@drawable/downward" />

    <TextView
        android:id="@+id/posicaoRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemNome"
        android:layout_alignParentStart="true"
        android:background="@drawable/posicaoranking"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/valorImproved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/valorAnoAtual"
        android:layout_alignBottom="@+id/valorAnoAtual"
        android:layout_marginEnd="7dp"
        android:layout_toStartOf="@+id/imgIcon"
        android:text="000,0%"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/valorImprovedS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iconeCorS"
        android:layout_alignStart="@+id/valorImproved"
        android:text="000,0%"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <Button
        android:id="@+id/iconeCor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imgIcon"
        android:background="@drawable/botaoestadosgreen" />

    <Button
        android:id="@+id/iconeCorS"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imgIconS"
        android:background="@drawable/botaoestadosgreen" />

</RelativeLayout>